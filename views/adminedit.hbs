<section class="p-5 bg-white" id="contact-section">
        <div class="container">
            <h1 class="text-center">Edit User</h1>
            <div class="row">
                <div class="col-md-12">
                <form id="gform" action="post">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputEmail4">Name</label>
                        <input type="text" class="form-control" autocomplete="off" name="name" id="name" maxlength="20" placeholder="Enter the name" oninput="this.value=this.value.replace(/[^A-Za-z ]|^ /g,'')" >
                        <p id="name-error"></p>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">Place</label>
                        <input type="text" class="form-control" id="place" autocomplete="off" name="place" maxlength="15" placeholder="Enter the place" oninput="this.value=this.value.replace(/[^A-Za-z ]|^ /g,'')">
                        <p id="place-error"></p>
                      </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="inputEmail4">Email</label>
                          <input type="email" class="form-control" id="email" maxlength="20" name="email" autocomplete="off" placeholder="Enter the email address">
                          <p id="email-error"></p>
                        </div>
                        <div class="form-group col-md-6">
                          <label for="inputPassword4">Password</label>
                          <input type="Password" class="form-control" id="mobile" maxlength="5" name="mobile" autocomplete="off" placeholder="Enter a strong password" >
                          <p id="mobile-error"></p>
                        </div>
                      </div>
                   
                   
                    
                  <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary" id="submit-btn" style="width: 100%;" >Update</button>
                </div>
                  </form>
                </div>
            </div>
        </div>
    </section>