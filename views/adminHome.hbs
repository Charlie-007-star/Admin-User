<section>
<div class="mt-5 mb-5 text-align-center"></div>
<div>
  <form action="/admin/addUser" method="GET">
  <button class="btn btn-success">Add User</button>
  </form>
</div>
  <container>
        

    <table class="table align-middle" id="usersTable">
  <thead>
   
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
     {{#each users}}
    <tr>
      <td>{{this.username}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
        <button type="button" class="btn btn-dark btn-sm px-3" >
          <a href="/admin/deleteUser/{{this._id}}" style="text-decoration: none;"  onclick="return confirm('Are you sure to delete {{this.username}} ? ')">
          <span style="color:white">delete</span>
          
          </a>
        </button>
        <button type="button" class="btn btn-dark btn-sm px-3">
            <a href="/admin/editUser/{{this._id}}" style="text-decoration: none;">
            
          <span style="color: white">Edit</span>
            </a>
          
        </button>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>


  </container>
</section>
<script>
$(document).ready(function() {
    $('#usersTable').DataTable();
} );
</script>

