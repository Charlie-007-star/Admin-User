});



$('#submit-btn').click( function(){
    validemail();
    validmobile();
    validname();

    if(formvalid.emailname && formvalid.mobilename && formvalid.username) {
        $('#submit-btn').prop('type','submit');
    }else {
        $('#submit-btn').prop('type','button');
    }

