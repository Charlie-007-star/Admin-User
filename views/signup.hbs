
{{!-- users sign-up --}}


  <div class="img-container" style="padding-left: 45rem;">
    <img src="https://www.crestwood.com/wp-content/uploads/2019/04/Sign-up-now.jpeg" alt="Avatar" class="avatar">
  </div>

   <section class="p-5 bg-white" id="contact-section">
        <div class="container">
            <h1 class="text-center">Sign-Up</h1>
            <div class="row">
                <div class="col-md-12">
                <form id="gform" action="post">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="inputEmail4">Name</label>
                        <input type="text" class="form-control" autocomplete="off" name="name" id="name" maxlength="20" placeholder="Enter your name" oninput="this.value=this.value.replace(/[^A-Za-z ]|^ /g,'')" >
                        <p id="name-error"></p>
                      </div>
                      <div class="form-group col-md-6">
                        <label for="inputPassword4">Place</label>
                        <input type="text" class="form-control" id="place" autocomplete="off" name="place" maxlength="15" placeholder="Enter the place" oninput="this.value=this.value.replace(/[^A-Za-z ]|^ /g,'')">
                        <p id="place-error"></p>
                      </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <label for="inputEmail4">Email</label>
                          <input type="email" class="form-control" id="email" maxlength="20" name="email" autocomplete="off" placeholder="Enter your email address">
                          <p id="email-error"></p>
                        </div>
                        <div class="form-group col-md-6">
                          <label for="inputPassword4">mobile</label>
                          <input type="tel" class="form-control" id="mobile" maxlength="10" name="mobile" autocomplete="off" placeholder="Enter the mobile number" oninput="this.value=this.value.replace(/[^0-9 ]|^ /g,'')">
                          <p id="mobile-error"></p>
                        </div>
                      </div>
                   
                   
                    
                  <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary" id="submit-btn" style="width: 100%;" >Sign-up</button>
                </div>
                  </form>
                </div>
            </div>
        </div>
    </section>

  
