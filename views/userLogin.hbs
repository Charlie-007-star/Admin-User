
{{!-- user login --}}

<section>
    <body class="main-bg">
        <div class="login-container text-c animated flipInX">
                <div>
                    <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
                </div>
                    <h3 class="text-whitesmoke"></h3>
                    <p class="text-black">Sign In</p>
                <div class="container-content">
                 
                    <form action="/login" method="POST">
                    {{#if LoginErr}}
            <p class="errr text-light">invalid username or password</p>
                    {{/if}}
                        <div class="form-group mt-4">  
                            <label for="email">Email</label>                        
                            <input type="email" class="form-control" id="email" maxlength="20" placeholder="email" required="" name="email">
                               <p style="color: red; padding-top: 1rem;" id="email-error"></p>   
                        </div>
                        <div class="form-group mt-4">
                            <label for="password">Password</label> 
                            <input type="password" class="form-control" id="message" maxlength="10" placeholder="password" required="" name="password">
                               <p style="color: rgb(235, 21, 21); padding-top: 1rem;" id="message-error"></p>
                        </div>
                        <button type="submit" id="submit-btn" class="form-button button-l margin-b mt-4">Sign In</button>
        
                        {{!-- <a class="text-darkyellow" href="#"><small>Forgot your password?</small></a> --}}
                        <p class="text-black text-center"><small>Do not have an account?</small></p>
                        <a class="text-dark" href="/signup"><small>Sign Up</small></a>
                      
                    </form>
                    {{!-- <p class="margin-t text-whitesmoke"><small> Your Name &copy; 2018</small> </p> --}}
                </div>
            </div>
</body>
